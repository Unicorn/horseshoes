{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,

    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",

    "inlineSources": true,
    "sourceMap": true,
    "newLine": "lf",

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
